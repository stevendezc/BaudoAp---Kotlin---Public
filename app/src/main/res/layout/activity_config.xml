<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".ConfigActivity">

    <LinearLayout
        android:id="@+id/configMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="60dp"
            android:fontFamily="@font/sofia"
            android:text="Ajustes"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/contextButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/comment_round_bg"
            android:backgroundTint="#242424"
            android:drawableLeft="@drawable/baudo"
            android:drawablePadding="30dp"
            android:fontFamily="@font/sofia"
            android:paddingStart="20dp"
            android:text="@string/settings_popup_baudo"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/baudo_yellow"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/contactButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/comment_round_bg"
            android:backgroundTint="#242424"
            android:drawableLeft="@drawable/mail"
            android:drawablePadding="24dp"
            android:fontFamily="@font/sofia"
            android:paddingStart="20dp"
            android:text="@string/settings_popup_support"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/baudo_yellow"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/faqButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/comment_round_bg"
            android:backgroundTint="#242424"
            android:drawableLeft="@drawable/faq"
            android:drawablePadding="24dp"
            android:fontFamily="@font/sofia"
            android:paddingStart="20dp"
            android:text="@string/settings_popup_faq"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/baudo_yellow"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/privacyButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/comment_round_bg"
            android:backgroundTint="#242424"
            android:drawableLeft="@drawable/privacy"
            android:drawablePadding="30dp"
            android:fontFamily="@font/sofia"
            android:paddingStart="20dp"
            android:text="@string/settings_popup_privacy"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/baudo_yellow"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/disconnectButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/comment_round_bg"
            android:backgroundTint="#242424"
            android:drawableLeft="@drawable/disconnect"
            android:drawablePadding="24dp"
            android:fontFamily="@font/sofia"
            android:paddingStart="20dp"
            android:text="@string/settings_popup_disconnect"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/baudo_yellow"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:tint="@color/white"
            app:srcCompat="@drawable/logo_baudo" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/settingsFragmentWrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

</androidx.appcompat.widget.LinearLayoutCompat>