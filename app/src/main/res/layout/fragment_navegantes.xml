<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.NavegantesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <ImageView
                android:visibility="gone"
                android:id="@+id/navegantesBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/back" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/navegantesLogo"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center|top"
                app:srcCompat="@drawable/navegantes_logo" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/navegantesFixed"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                app:srcCompat="@drawable/logo_baudo_small" />

            <ImageView
                android:id="@+id/navegantesInfo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                app:srcCompat="@drawable/info" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/white_round_border"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingTop="10dp"
            android:paddingEnd="100dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Navega con fuerza"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingBottom="10dp"
                android:text="$50.000 o 20USD"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Recibes los beneficios de Navegantes."
                android:textColor="@color/white"
                android:textSize="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- No incluye la pieza editorial"
                android:textColor="@color/white"
                android:textSize="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Aporte único para Fábricas de Agua parte II"
                android:textColor="@color/white"
                android:textSize="10dp" />

            <Button
                android:id="@+id/fuerzaContribute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_round_border"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:text="APORTAR"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/white_round_border"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingTop="10dp"
            android:paddingEnd="100dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Navega con pasión"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingBottom="10dp"
                android:text="$100.000 o 40USD"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Recibes los beneficios de Navegantes."
                android:textColor="@color/white"
                android:textSize="9dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Incluye pieza editorial y envío"
                android:textColor="@color/white"
                android:textSize="9dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- No incluye envío fuera de Colombia"
                android:textColor="@color/white"
                android:textSize="9dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Aporte único para Fábricas de Agua parte II."
                android:textColor="@color/white"
                android:textSize="9dp" />

            <Button
                android:id="@+id/pasionContribute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_round_border"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:text="APORTAR"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/white_round_border"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingTop="10dp"
            android:paddingEnd="100dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Navega a tu ritmo"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingBottom="10dp"
                android:text="$150.000 o Libre"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Dona esta cantidad o más y recibirás los beneficios de Navegantes + Certificado de donación de nuestra fundación"
                android:textColor="@color/white"
                android:textSize="10dp" />

            <Button
                android:id="@+id/ritmoContribute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_round_border"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:text="APORTAR"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>