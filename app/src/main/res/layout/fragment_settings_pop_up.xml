<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SettingsPopUpFragment"
    android:background="@drawable/bottom_navigation_background">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@drawable/pop_background"
        android:orientation="vertical"
        android:paddingLeft="70dp"
        android:paddingTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/baudo" />

            <TextView
                android:id="@+id/settingsPopUpBaudo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_popup_baudo"
                android:textColor="#FFAA00"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/payment" />

            <TextView
                android:id="@+id/settingsPopUpPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_popup_payment"
                android:textColor="#FFAA00"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/team" />

            <TextView
                android:id="@+id/settingsPopUpTeam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_popup_team"
                android:textColor="#FFAA00"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/settingsPopUpSupport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="41dp"
                android:text="@string/settings_popup_support"
                android:textColor="#FFAA00"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/faq" />

            <TextView
                android:id="@+id/settingsPopUpFaq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_popup_faq"
                android:textColor="#FFAA00"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/invite" />

            <TextView
                android:id="@+id/settingsPopUpInvite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_popup_invite"
                android:textColor="#FFAA00"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/privacy" />

            <TextView
                android:id="@+id/settingsPopUpPrivacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_popup_privacy"
                android:textColor="#FFAA00"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/disconnect" />

            <TextView
                android:id="@+id/settingsPopUpDisconnect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_popup_disconnect"
                android:textColor="#FFAA00"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>