                android:value="" />
        </activity>
        <activity
            android:name=".InnerPodcastContentActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".resizedImageActivity"
            android:exported="false">
            <meta-data
